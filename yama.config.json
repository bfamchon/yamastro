{
  "presets": {
    "taxonomies": [
      {
        "code": "category",
        "configuration": {
          "output": {
            "directory": "src/data/taxonomies",
            "filename": "{code}.json"
          }
        },
        "translations": {
          "fr_FR": {
            "name": "Cat√©gorie"
          }
        }
      }
    ],
    "contents": [
      {
        "code": "pages",
        "configuration": {
          "output": {
            "directory": "src/content/{code}",
            "filename": "{slug}.{locale}.md"
          },
          "thumbor": {
            "formats": [
              {
                "code": "thumb",
                "width": 200,
                "height": 0
              }
            ]
          }
        },
        "translations": {
          "fr_FR": {
            "label": "Page",
            "permalink": "/{locale|language}/{slug}"
          }
        }
      },
      {
        "code": "posts",
        "taxonomies": [
          "category"
        ],
        "configuration": {
          "output": {
            "directory": "src/content/{code}",
            "filename": "{date|Y-m-d}-{slug}.{locale}.md"
          },
          "thumbor": {
            "formats": [
              {
                "code": "thumb",
                "width": 200,
                "height": 0
              }
            ]
          }
        },
        "translations": {
          "fr_FR": {
            "label": "Post",
            "permalink": "/{locale|language}/{date|Y-m-d}/{slug}"
          }
        }
      }
    ]
  }
}